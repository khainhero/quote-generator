    if(data.quote && data.author){
        let { quote } = this.state;
        quote.author = data.author;
        quote.quote = data.quote;
        this.setState({ quote}, () =>{
            if(this.state.hasQuote === false){
                this.setState({ hasQuote:true})
            }
            
        });
      
    }
    else{
        return console.error('No quote found 404');
    }


    .quote {
  text-align: center;
}

.author{
  text-align: right;
 
}


